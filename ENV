export CUNUMERIC_JL_HOME=$(dirname "$(realpath "${BASH_SOURCE[0]}")")

# sets packages to path and activates conda env
file=./.localenv
if [ -e "$file" ]; then
  source $file
  echo "Found local environment file $file"
fi 

JULIA="julia"
export JULIA_PATH=$(which $JULIA)

# 0 : Disable automatic configuration
# 1 : Enable automatic fongiruation
export LEGATE_AUTO_CONFIG=1

# 0 : Do no print reserved resources
# 1 : Print reserverd resources on startup
export LEGATE_SHOW_CONFIG=1

export LEGATE_CONFIG="--cpus 10 --gpus 1"

